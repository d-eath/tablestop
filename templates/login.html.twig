{% extends 'base.html.twig' %}

{% block title 'connexion / ' ~ parent() %}

{% set template = 'login' %}

{% block main %}
<div class="ui container grid messages-container">
    <div class="column">
        {% include('common/messages.html.twig') %}
    </div>
</div>
<div class="ui container segment">
    <div class="ui two column very relaxed stackable grid">
        <div class="column">
            <form method="post" class="ui login form">
                <h2>Connexion</h2>
                <div class="field">
                    <label>Nom d'utilisateur</label>
                    <div class="ui left icon input">
                        <input name="username" type="text" autofocus>
                        <i class="user icon"></i>
                    </div>
                </div>
                <div class="field">
                    <label>Mot de passe</label>
                    <div class="ui left icon input">
                        <input name="password" type="password">
                        <i class="lock icon"></i>
                    </div>
                </div>
                <button type="submit" class="ui blue submit button float-right">Connexion</button>
            </form>
        </div>
        <div class="middle aligned column text-center">
            <p>Vous n'avez pas de compte ?</p>
            <a href="{{ path('signup') }}" class="ui big button">
                <i class="signup icon"></i>
                Créer un compte
            </a>
        </div>
    </div>
    <div class="ui vertical divider">ou</div>
</div>
<div class="ui container grid">
    {% include('common/messages.html.twig') %}
</div>
{% endblock %}